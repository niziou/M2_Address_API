<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route method="GET" url="/V1/polcode-apiextension/address/mine">
		<service class="Polcode\ApiExtension\Api\Customer\AddressManagementInterface" method="search"/>
		<resources>
			<resource ref="self"/>
		</resources>
		<data>
			<parameter name="customerId" force="true">%customer_id%</parameter>
		</data>
	</route>
	<route method="GET" url="/V1/polcode-apiextension/address/mine/:addressId">
		<service class="Polcode\ApiExtension\Api\Customer\AddressManagementInterface" method="get"/>
		<resources>
			<resource ref="self"/>
		</resources>
		<data>
			<parameter name="customerId" force="true">%customer_id%</parameter>
		</data>
	</route>
	<route method="POST" url="/V1/polcode-apiextension/address/mine">
		<service class="Polcode\ApiExtension\Api\Customer\AddressManagementInterface" method="create"/>
		<resources>
			<resource ref="self"/>
		</resources>
		<data>
			<parameter name="customerId" force="true">%customer_id%</parameter>
		</data>
	</route>
	<route method="PUT" url="/V1/polcode-apiextension/address/mine/:addressId">
		<service class="Polcode\ApiExtension\Api\Customer\AddressManagementInterface" method="update"/>
		<resources>
			<resource ref="self"/>
		</resources>
		<data>
			<parameter name="customerId" force="true">%customer_id%</parameter>
		</data>
	</route>
	<route method="DELETE" url="/V1/polcode-apiextension/address/mine/:addressId">
		<service class="Polcode\ApiExtension\Api\Customer\AddressManagementInterface" method="delete"/>
		<resources>
			<resource ref="self"/>
		</resources>
		<data>
			<parameter name="customerId" force="true">%customer_id%</parameter>
		</data>
	</route>
</routes>
